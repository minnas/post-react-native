{
  "compilerOptions": {
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "isolatedModules": true,
    "jsx": "react-native",
    "lib": ["es2017"],
    "types": ["react-native", "jest"],
    "moduleResolution": "node",
    "noEmit": true,
    "strict": true,
    "target": "esnext",
    "baseUrl": ".",
    "paths": {
      "@Tools/*": ["src/components/tools/*"],
      "@Assets/*": ["src/assets/*"],
      "@Types/*": ["src/components/types/*"],
      "@Views/*": ["src/components/views/*"],
      "@Store/*": ["src/store/*"],
      "@Styles/*": ["src/styles/*"],
      "@Api/*": ["src/api/*"]
    }
  },
  "exclude": [
    "node_modules",
    "babel.config.js",
    "metro.config.js",
    "jest.config.js"
  ],
  "extends": "expo/tsconfig.base"
}
